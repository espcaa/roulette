---
import Layout from '../layouts/Layout.astro';
import Background from '../components/Background.astro';

---

<Layout>
<div class="container">
	<Background></Background>

	<div class="foreground">
    <slot />

	</div>

</div>
</Layout>


<style>
	.container {
		width: 100%;
		height: 100%;
		text-align: center;

		overflow: hidden;
	}

	.container > div {
		position: absolute;
		width: 100%;
		height: 100%;
	}

	.foreground {
		padding: 40px;
		box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-flow: column;
	}

</style>
