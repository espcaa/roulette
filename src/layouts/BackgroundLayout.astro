---
import Layout from '../layouts/Layout.astro';
import Background from '../components/Background.astro';

---

<Layout>
<main>
	<Background></Background>

	<div class="foreground">
    <slot />

	</div>

</main>
</Layout>


<style>
	main {
		width: 100%;
		height: 100%;
		text-align: center;

		overflow: hidden;
	}

	main > div {
		position: absolute;
		width: 100%;
		height: 100%;
	}

	.foreground {
		padding: 20px;
		box-sizing: border-box;
    display: flex;
  align-items: center;
  justify-content: center;
  flex-flow: column;
	}

</style>
