---
const { reversed = false, pink=false } = Astro.props;

---


{ reversed ?
  <img src={pink ? "/linkbutton_arrow_pink.png" : "/linkbutton_arrow.png"} style="height: 0.9em; margin-bottom: -0.05em; margin-left:0.2em; margin-right: 0.2em; transform: rotateY(180deg)" >
  :
  <img src={pink ? "/linkbutton_arrow_pink.png" : "/linkbutton_arrow.png"} style="height: 0.9em; margin-bottom: -0.05em; margin-left:0.2em; margin-right: 0.2em;" >}
