---
import Layout from '../layouts/Layout.astro';
import LinkButton from '../components/LinkButton.astro';
import Background from '../components/Background.astro';
import logo from '../assets/logo.png';


import '../styles/global.css';

---

<Layout>
<main>
	<Background></Background>

	<div class="foreground">
		<img class="logo" src={logo.src} alt="" fetchpriority="high"/>
		<p>spin wheels. make games. get prizes.</p>
		<p>starts 8 august.</p>

		<LinkButton href="https://hackclub.slack.com/archives/C0997MH9QF2" newpage>sign in with slack</LinkButton>
		<!-- LinkButton href="https://hackclub.slack.com/archives/C0997MH9QF2" newpage>join #roulette on slack</LinkButton -->

	</div>

</main>
</Layout>


<style>
	main {
		width: 100%;
		height: 100%;
		text-align: center;

		overflow: hidden;
	}

	main > div {
		position: absolute;
		width: 100%;
		height: 100%;
	}

	.foreground {
		display: flex;
		align-items: center;
		justify-content: center;
		flex-flow: column;
		padding: 20px;
		box-sizing: border-box;
	}

	.foreground .logo {
		margin-bottom: 16px;
		width: 60%;
	}




	.foreground p {
		margin: 8px 0;
	}




	@media (max-width: 600px) {
		.foreground .logo {
			width: 90%;
		}


	}

</style>
